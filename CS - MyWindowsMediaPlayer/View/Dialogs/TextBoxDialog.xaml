<Window x:Class="MyWindowsMediaPlayer.View.Dialogs.TextBoxDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWindowsMediaPlayer.View.Dialogs"
        mc:Ignorable="d"
        Title="TextBoxDialog" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid>
        <StackPanel Width="250">
            <TextBlock x:Name="Label" Margin="5,5,5,0" />
            <TextBox x:Name="InputTextBox" Height="24" Margin="5" />
            <Button Content="Valider" Height="24" Click="OKButton_Click" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
